<%= render :partial => "menu" %>
<h1>Usuário</h1>
<table cellpadding="0" cellspacing="0" border="0" class="display" id="user">
	<thead> 
		<tr>
			<th>Nome</th>
			<th>Local</th>
			<th>Time Zone</th>
			<th>Descrição</th>
			<th>Criado em</th>
			<th>Seguidores</th>
			<th>Amigos</th>
		</tr>
	</thead>
	<tbody>
		<tr>
			<td><img src="<%=@user.profile_image_url%>" alt="Imagem"><br><%= @user.name %> (<%=@user.screen_name%>)</td>
			<td><%= @user.location %></td>
			<td><%= @user.time_zone %></td>
			<td><%= @user.description %></td>
			<td><%= string_2_date_formated(@user.created_at) %></td>
			<td><%= @user.followers_count %></td>
			<td><%= @user.friends_count %></td>
		</tr>
	</tbody> 
</table>

<h1>Twitts</h1>
<table cellpadding="0" cellspacing="0" border="0" class="display" id="twitts">
	<thead>
		<tr>
			<th>Data</th>
			<th>Twitt</th>
		</tr>
	</thead>
	<tbody>
		<%@twitts.each do |twitt| %>
			
			<%
			imagem=nil
			if twitt.respond_to? "retweeted_status"
				imagem=twitt.retweeted_status.user.profile_image_url
			else
				imagem=twitt.user.profile_image_url
			end
			%>
			<tr>
				<td><%= string_2_date_formated(twitt.created_at)%></td>
				<td><span><img src="<%=imagem%>" alt="Imagem"></span><span><%= twitt.text %></span></td>
			</tr>
		<% end %>
	</tbody> 
</table>

<%= content_for :js do%>
$(document).ready(function() {
	$('#twitts').dataTable({
		"aaSorting": [],
		"aoColumns": [
			{ "sType": "date-euro" },
			null
			]
		});
} );
<%end%>